<!doctype html>
<html lang="en" class="body-form">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title n:snippet="title">{ifset title}{include title|stripHtml} | {/ifset}Blog</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="{webpack commonModule.css}">
    <link rel="stylesheet" href="{webpack securityModule.css}">
</head>

<body class="text-center">
    <main class="w-100 form-wrapper" n:snippet="content">
        <div n:foreach="$flashes as $flash" class="alert alert-{$flash->type} w-100 m-auto" role="alert">
            {$flash->message}
        </div>

        {include content}

        <footer class="my-3">
            <p class="mt-3 text-muted">{="now"|date: 'Y'} &ndash; Bloggi</p>
        </footer>
    </main>
</body>

<script src="{webpack commonModule.js}"></script>
<script src="{webpack securityModule.js}"></script>

</body>
</html>
